{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended"
	],
	"configMigration": true,
	"timezone": "America/New_York",
	"lockFileMaintenance": {
		"enabled": true
	},
	"rebaseWhen": "auto",
	"automerge": true,
	"automergeSchedule": [
		"* 4-21 * * *"
	],
	"prConcurrentLimit": 1,
	"rangeStrategy": "bump",
	"addLabels": [
		"renovate"
	],
	"branchPrefix": "renovate/",
	"enabledManagers": [
		"composer",
		"npm"
	],
	"dependencyDashboard": true,
	"packageRules": [
		{
			"groupName": "Major all - skipped to update manually",
			"matchManagers": [
				"composer",
				"npm"
			],
			"matchDatasources": [
				"packagist"
			],
			"matchUpdateTypes": [
				"major"
			],
			"enabled": false,
			"matchPackageNames": [
				"/.*/"
			]
		},
		{
			"groupName": "[npm] Minor and Patch",
			"groupSlug": "npm-minor-patch",
			"matchManagers": [
				"npm"
			],
			"matchUpdateTypes": [
				"patch",
				"minor"
			],
			"matchPackageNames": [
				"/.*/"
			]
		},
		{
			"groupName": "Minor and Patch Contrib",
			"groupSlug": "minor-patch-contrib",
			"matchManagers": [
				"composer"
			],
			"matchDatasources": [
				"packagist"
			],
			"separateMinorPatch": false,
			"matchPackageNames": [
				"/.*/",
				"!drupal/core-composer-scaffold",
				"!drupal/core-project-message",
				"!drupal/core-recommended"
			]
		},
		{
			"groupName": "Minor and Patch Core",
			"groupSlug": "minor-patch-core",
			"matchManagers": [
				"composer"
			],
			"schedule": [
				"before 2am"
			],
			"matchDatasources": [
				"packagist"
			],
			"matchUpdateTypes": [
				"patch",
				"minor"
			],
			"matchPackageNames": [
				"drupal/core-composer-scaffold",
				"drupal/core-project-message",
				"drupal/core-recommended"
			]
		}
	]
}
