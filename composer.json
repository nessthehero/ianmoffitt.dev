{
	"name": "ianmoffitt.dev/website",
	"description": "My personal website",
	"type": "project",
	"require": {
		"ext-intl": "*",
		"composer/installers": "^1.12",
		"cweagans/composer-patches": "^1.7.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0",
		"drupal/admin_toolbar": "^3.5.3",
		"drupal/auto_entitylabel": "^3.4.0@beta",
		"drupal/cdn": "^5.0@alpha",
		"drupal/ckeditor_media_resize": "^1.0.0@beta",
		"drupal/config_ignore": "^3.3",
		"drupal/config_split": "^2.0.2",
		"drupal/core-composer-scaffold": "^11",
		"drupal/core-project-message": "^11",
		"drupal/core-recommended": "^11",
		"drupal/entity_reference_revisions": "^1.12",
		"drupal/field_group": "^3.6",
		"drupal/gin": "^3.0.0@RC",
		"drupal/gin_login": "^2.1.3",
		"drupal/gin_toolbar": "^1.0.0@beta",
		"drupal/link_attributes": "^2.1.1",
		"drupal/metatag": "^2.1",
		"drupal/paragraphs": "^1.19.0",
		"drupal/pathauto": "^1.13",
		"drupal/smtp": "^1.4.0",
		"drupal/spotify_playing": "^1.1.2",
		"drupal/stable": "^2.1.0",
		"drupal/token_filter": "^2.2.1",
		"drupal/xmlsitemap": "^2.0.0@beta",
		"drush/drush": "^13.6.0",
		"vlucas/phpdotenv": "^5.6.1"
	},
	"license": "MIT",
	"minimum-stability": "dev",
	"prefer-stable": true,
	"config": {
		"process-timeout": 0,
		"sort-packages": true,
		"platform": {
			"php": "8.3.2"
		},
		"allow-plugins": {
			"composer/installers": true,
			"cweagans/composer-patches": true,
			"drupal/core-composer-scaffold": true,
			"drupal/core-project-message": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"autoload": {
		"files": [
			"load.environment.php"
		]
	},
	"repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
	},
	"extra": {
		"installer-types": [
			"npm-asset"
		],
		"installer-paths": {
			"web/core": [
				"type:drupal-core"
			],
			"web/libraries/{$name}": [
				"type:drupal-library",
				"type:bower-asset",
				"type:npm-asset"
			],
			"web/modules/contrib/{$name}": [
				"type:drupal-module"
			],
			"web/profiles/contrib/{$name}": [
				"type:drupal-profile"
			],
			"web/themes/contrib/{$name}": [
				"type:drupal-theme"
			],
			"drush/contrib/{$name}": [
				"type:drupal-drush"
			]
		},
        "enable-patching": true,
		"drupal-scaffold": {
			"locations": {
				"web-root": "./web"
			},
			"file-mapping": {
				"[project-root]/.editorconfig": false,
				"[web-root]/.htaccess": {
					"mode": "append",
					"append": "addendum/htaccess-append.txt"
				},
				"[web-root]/robots.txt": {
					"mode": "append",
					"prepend": "addendum/robots-prequel.txt",
					"append": "addendum/robots-append.txt"
				},
				"[web-root]/sites/development.services.yml": false
			}
		}
	},
	"require-dev": {
		"drupal/coder": "^8.3.28",
		"drupal/upgrade_status": "^4.3.6"
	}
}
